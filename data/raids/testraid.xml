<?xml version="1.0" encoding="UTF-8"?>
<raid>
	<!-- Message broadcast -->
	<!-- Broadcast types: warning, event, default, description, smallstatus, blueconsole, redconsole -->
	<announce delay="1000" type="warning" message="Rats are attacking neart Trekolt Temple!" />
	<announce delay="25000" type="warning" message="Rats attack continues!" />

	<!-- Area spawns - you can specify raid area or use range value -->
	<areaspawn delay="2000" radius="5" centerx="94" centery="126" centerz="7">
		<monster name="Rat" amount="3" /><!-- Specified amount -->
	</areaspawn>

	<areaspawn delay="30000" fromx="89" fromy="122" fromz="7" tox="99" toy="130" toz="7">
		<monster name="Rat" minamount="4" maxamount="10" /><!-- Random amount in specified range -->
	</areaspawn>

	<!-- Single spawns -->
	<singlespawn delay="15000" name="Cave Rat" x="93" y="123" z="7" />
	<singlespawn delay="30000" name="Cave Rat" x="98" y="125" z="7" />
	<singlespawn delay="30000" name="Cave Rat" x="94" y="128" z="7" />
</raid>
